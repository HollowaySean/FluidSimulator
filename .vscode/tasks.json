{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "GUI Build",
            "command": "/bin/g++",
            "args": [
                "-g",
                "src/main/mainGUI.cpp",
                "src/*.cpp",
                "lib/imgui/*.cpp",
                "-o",
                "bin/FluidSimGUI",
                "-lGL",
                "-lGLEW",
                "-lglfw",
                "-I",
                "lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "Record Build",
            "command": "/bin/g++",
            "args": [
                "-g",
                "src/main/mainRecord.cpp",
                "src/*.cpp",
                "lib/imgui/*.cpp",
                "-o",
                "bin/FluidSimRecord",
                "-lGL",
                "-lGLEW",
                "-lglfw",
                "-I",
                "lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /bin/g++"
        },
        {
            "label": "Build",
            "dependsOn": [
                "GUI Build",
                "Record Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}